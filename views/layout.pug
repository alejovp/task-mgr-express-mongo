doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Task Manager App
    <!-- Latest compiled and minified CSS & JS -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-toDoApp-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          |  
          a.navbar-brand(href='/') Tasks Manager
        
        #bs-toDoApp-navbar-collapse-1.collapse.navbar-collapse
          if (user)  
            ul.nav.navbar-nav
              li(class=activeList)
                a(href='/tasks') My Tasks
              li(class=activeComp)
                a(href='/tasks/completed') Completed Tasks  
            ul.nav.navbar-nav.navbar-right
              li
                a(href="/logout") Log Out
            span.pull-right(id='navUser') #{ user.username }
                  
    block content

    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/main.js"></script>
    


